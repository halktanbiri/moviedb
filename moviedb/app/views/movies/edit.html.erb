<% if @movie.errors.any? %>
    Hata:<%= @movie.errors.full_messages.to_sentence %>
    <br></br>
<% end %>
<%= form_for @movie, url: { action: 'update' } do |f| %>
    Film Adı: <br>
    <%=f.text_field :name %> <br>
    Film Açıklama: <br>
    <%=f.text_area :description %> <br>
    Poster: <br>
    <%=f.file_field :avatar %> <br>
    <%= f.submit 'Ekle' %>
<% end %>